<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xin.huangpeidong.hpdbanban.main.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/activity_main_ll_tab1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_main_iv_tab1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/activity_main_tv_tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="首页"
                android:textColor="#bcbcbc"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_ll_tab2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_main_iv_tab2"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/activity_main_tv_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="二货"
                android:textColor="#bcbcbc"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_ll_tab3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_main_iv_tab3"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/activity_main_tv_tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="三毛"
                android:textColor="#bcbcbc"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_ll_tab4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_main_iv_tab4"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/activity_main_tv_tab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="我的"
                android:textColor="#bcbcbc"
                android:textSize="11sp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
